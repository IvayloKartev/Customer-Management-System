generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/cms"
}

model User {
  id Int @id @unique @default(autoincrement())
  name String @unique
  email String @unique
  password String
  names String? @unique
  phone String? @unique
  address String?
  isAdmin Boolean @default(false)
  companies Company[]
}

model Company {
  id Int @id @unique @default(autoincrement())
  name String @unique
  owner User @relation(fields: [ownerId], references: [id])
  ownerId Int @unique
}

model FinancialData {
  id Int @id @default(autoincrement())
  date DateTime @unique
  money Decimal
}

model Log {
  id Int @id @default(autoincrement())
  action Actions
  date DateTime
  by String
  userId Int 
}

enum Actions {
    AddUser
    DeleteUser
    EditUser
    AddCompany
    DeleteCompany
    EditCompany
}
