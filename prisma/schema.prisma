generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/cms"
}

model User {
  id Int @id @unique @default(autoincrement())
  name String @unique
  email String @unique
  password String
  names String? @unique
  phone String? @unique
  address String?
  isAdmin Boolean @default(false)
  companies CompanyOnUsers[]
}

model Company {
  id Int @id @unique @default(autoincrement())
  name String @unique
  bulstat String 
  owner CompanyOnUsers[]
}

model CompanyOnUsers {
  user User @relation(fields: [userId], references: [id])
  userId Int
  company Company @relation(fields: [companyId], references: [id])
  companyId Int

  @@id([userId, companyId])
}
model FinancialData {
  id Int @id @default(autoincrement())
  date DateTime @unique
  money Decimal
}

model Log {
  id Int @id @default(autoincrement())
  action Actions
  date DateTime @default(now())
  by String
  userId Int 
}

enum Actions {
    AddUser
    DeleteUser
    EditUser
    AddCompany
    DeleteCompany
    EditCompany
}
